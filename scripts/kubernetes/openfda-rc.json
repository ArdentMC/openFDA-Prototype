{
  "metadata": {
    "name": "openfda-standalone-rc-0.2"
  },
  "kind": "ReplicationController",
  "apiVersion": "v1beta3",
  "spec": {
    "replicas": 2,
    "selector": {"type": "openfda", "version": "0.2"},
    "template": {
      "metadata": {
        "labels": { "type": "openfda", "version": "0.2" }
      },
      "spec": {
        "containers": [
          {
            "name": "openfda",
            "image": "kindafearless/openfda-prototype",
            "ports": [{
              "containerPort": 3000
            }],
            "env": [
              {"name": "ROOT_URL", "value": "http://ardentmc18f.com"},
              {"name": "MONGO_URL", "value": "mongodb://mongo-service:27017/mydb"}
            ]
          }
        ]
      }
    }
  }
}
